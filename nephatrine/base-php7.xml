<?xml version="1.0" encoding="utf-8"?>
<Container>
	<TemplateURL>https://raw.githubusercontent.com/nephatrine/unraid-docker-templates/master/nephatrine/base-php7.xml</TemplateURL>

	<Name>base-php7</Name>
	<Project>http://www.php.net/</Project>
	<Overview>PHP is a popular general-purpose scripting language that is especially suited to web development.</Overview>
	<Description>PHP is a popular general-purpose scripting language that is especially suited to web development.[br]
  [br][b]Variables[/b][br]
  [b]ADMINIP:[/b] Administrative IP[br]
  [b]DNSADDR:[/b] DNS Resolver IPs[br]
  [b]PGID:[/b] NGINX GID[br]
  [b]PUID:[/b] NGINX UID[br]
  [b]SSLEMAIL:[/b] LetsEncrypt Email Address[br]
  [b]SSLDOMAINS:[/b] LetsEncrypt (Sub)domains[br]
  [b]TZ:[/b] Time Zone[br]
  [br][b]Network Ports[/b][br]
  [b]TCP 80:[/b] HTTP Port[br]
  [b]TCP 443:[/b] HTTPS Port[br]
  [br][b]Volume Mounts[/b][br]
  [b]/mnt/config:[/b] Config/Data/Log Volume[br]
	</Description>

	<BaseImage>nephatrine/nginx-ssl</BaseImage>
	<Beta>False</Beta>
	<Category>Network:Web</Category>
	<Registry>https://hub.docker.com/r/nephatrine/base-php7/</Registry>
	<Repository>nephatrine/base-php7</Repository>
	<Support>https://github.com/nephatrine/docker-base-php7/issues</Support>

	<BindTime>true</BindTime>
	<Privileged>false</Privileged>

	<Environment>
		<Variable>
			<Name>ADMINIP</Name>
			<Value>127.0.0.1</Value>
		</Variable>
		<Variable>
			<Name>DNSADDR</Name>
			<Value>8.8.8.8 8.8.4.4</Value>
		</Variable>
		<Variable>
			<Name>PUID</Name>
			<Value>1000</Value>
		</Variable>
		<Variable>
			<Name>PGID</Name>
			<Value>100</Value>
		</Variable>
		<Variable>
			<Name>SSLEMAIL</Name>
			<Value></Value>
		</Variable>
		<Variable>
			<Name>SSLDOMAINS</Name>
			<Value></Value>
		</Variable>
		<Variable>
			<Name>TZ</Name>
			<Value>America/New_York</Value>
		</Variable>
	</Environment>

	<Networking>
		<Mode>bridge</Mode>
		<Publish>
			<Port>
				<HostPort>9019</HostPort>
				<ContainerPort>80</ContainerPort>
				<Protocol>tcp</Protocol>
			</Port>
			<Port>
				<HostPort>9029</HostPort>
				<ContainerPort>443</ContainerPort>
				<Protocol>tcp</Protocol>
			</Port>
		</Publish>
	</Networking>

	<Data>
		<Volume>
			<HostDir>/mnt/user/appdata/docker-base-php7</HostDir>
			<ContainerDir>/mnt/config</ContainerDir>
			<Mode>rw</Mode>
		</Volume>
	</Data>
	
	<Icon>https://github.com/nephatrine/unraid-docker-templates/raw/master/nephatrine/icons/base-php7.png</Icon>
	<WebUI>http://[IP]:[PORT:80]/</WebUI>
</Container>