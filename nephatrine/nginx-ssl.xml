<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
	<Name>nginx-ssl</Name>
	<Repository>nephatrine/nginx-ssl</Repository>
	<Registry>https://hub.docker.com/r/nephatrine/nginx-ssl/</Registry>

	<Network>bridge</Network>
	<Privileged>false</Privileged>

	<Support>https://github.com/nephatrine/docker-nginx-ssl/issues</Support>
	<Project>https://nginx.org/</Project>
	<Overview>nginx (engine x) is an HTTP and reverse proxy server, a mail proxy server, and a generic TCP/UDP proxy server.</Overview>
	<Category>Network:Proxy Network:Web</Category>
	<WebUI>http://[IP]:[PORT:80]/</WebUI>
	<TemplateURL>https://code.nephatrine.net/nephatrine/unraid-containers/raw/branch/master/nephatrine/nginx-ssl.xml</TemplateURL>
	<Icon>https://github.com/nephatrine/unraid-docker-templates/raw/master/nephatrine/icons/nginx-ssl.png</Icon>

	<Config Name="DNS Resolver(s)" Target="DNSADDR" Default="8.8.8.8 8.8.4.4" Description="Container Variable: DNSADDR" Type="Variable" Display="always" Required="false" Mask="false"></Config>
	<Config Name="SSL Domain(s)" Target="SSLDOMAINS" Default="" Description="Container Variable: SSLDOMAINS" Type="Variable" Display="always" Required="false" Mask="false"></Config>
	<Config Name="SSL Email" Target="SSLEMAIL" Default="" Description="Container Variable: SSLEMAIL" Type="Variable" Display="always" Required="false" Mask="false"></Config>
	<Config Name="Timezone" Target="TZ" Default="America/New_York" Description="Container Variable: TZ" Type="Variable" Display="always" Required="false" Mask="false"></Config>
	<Config Name="Admin IP" Target="ADMINIP" Default="127.0.0.1" Description="Container Variable: ADMINIP" Type="Variable" Display="advanced" Required="false" Mask="false"></Config>
	<Config Name="Owner UID" Target="PUID" Default="1000" Description="Container Variable: PUID" Type="Variable" Display="advanced" Required="false" Mask="false"></Config>
	<Config Name="Owner GID" Target="PGID" Default="100" Description="Container Variable: PGID" Type="Variable" Display="advanced" Required="false" Mask="false"></Config>

	<Config Name="HTTP Port" Target="80" Default="9010" Mode="tcp" Description="Container Port: 80/tcp" Type="Port" Display="always" Required="true"></Config>
	<Config Name="HTTPS Port" Target="443" Default="9020" Mode="tcp" Description="Container Port: 443/tcp" Type="Port" Display="always" Required="false"></Config>

	<Config Name="Operational Mount" Target="/mnt/config" Default="/mnt/user/appdata/docker-nginx-ssl" Mode="rw" Description="Container Path: /mnt/config" Type="Path" Display="always" Required="true"></Config>
</Container>
